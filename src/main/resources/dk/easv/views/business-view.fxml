         </children>
      </GridPane>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
         <children>
            <Label text="Customers" />
            <MFXTableView fx:id="customersTable" footerVisible="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="198.0" prefWidth="830.0" VBox.vgrow="ALWAYS" />
