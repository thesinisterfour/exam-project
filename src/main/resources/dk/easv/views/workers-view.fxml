   <children>
      <MFXTextField fx:id="searchBar" floatMode="BORDER" maxWidth="1.7976931348623157E308" prefHeight="42.0" prefWidth="1154.0" promptText="Search" VBox.vgrow="ALWAYS">
         <font>
            <Font name="Book Antiqua Bold" size="12.0" />
         </font>
      </MFXTextField>
      <GridPane VBox.vgrow="NEVER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="239.19998779296876" minHeight="10.0" prefHeight="239.19998779296876" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="129.60001220703126" minHeight="10.0" prefHeight="29.600012207031256" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <MFXScrollPane fx:id="workerScrollPane">
               <content>
                  <HBox fx:id="workers" prefHeight="100.0" prefWidth="200.0" />
               </content>
            </MFXScrollPane>
            <HBox alignment="CENTER_RIGHT" spacing="8.0" GridPane.rowIndex="1">
               <children>
                  <MFXButton fx:id="newWorker" text="New Worker" />
