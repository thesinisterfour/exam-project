<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../css/global-style.css"  fx:controller="dk.easv.gui.controllers.CanvasController">
    <children>
        <BorderPane>
            <top>
                <HBox spacing="5">
                    <ChoiceBox fx:id="colorChooser" prefWidth="100" />
                    <ChoiceBox fx:id="sizeChooser" prefWidth="50" />
                    <Button fx:id="resetButton" text="Reset" />
                </HBox>
            </top>
            <center>
                <Canvas fx:id="canvas" width="300" height="300" />
            </center>
        </BorderPane>
    </children>
</StackPane>
