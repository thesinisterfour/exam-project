            </HBox>
         </children>
      </GridPane>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="projectLabel" text="Project" />
            <MFXTableView fx:id="projectTable" footerVisible="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="230.0" prefWidth="830.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
